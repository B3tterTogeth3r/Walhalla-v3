<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Datum:" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03.02.2021 02:30 Uhr" />
    </TableRow>

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/bubble_seek_bar"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bsb_bubble_color="@color/colorAccent"
        app:bsb_bubble_text_color="@color/colorPrimaryDark"
        app:bsb_max="4"
        app:bsb_min="0"
        app:bsb_progress="0"
        app:bsb_second_track_color="@color/colorAccent"
        app:bsb_section_count="4"
        app:bsb_section_text_position="bottom_sides"
        app:bsb_show_progress_in_float="true"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_section_text_interval="1"
        app:bsb_show_thumb_text="true"
        app:bsb_track_color="@color/colorPrimary"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="io (inoffiziell - Kragen)" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="o (offiziell - Hemd)" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ho (hochoffiziell - Anzug)" />
        </RadioGroup>
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Titel:" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/material_emphasis_disabled"
            android:text="Superbowl LV" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Beschreibung:" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/material_emphasis_disabled"
            android:text="In Tampa Bay spielen die Bucks gegen die KC Chiefs" />
    </TableRow>
</TableLayout>