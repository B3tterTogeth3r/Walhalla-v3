<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- END -->

    <style name="FullScreenAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/background_button</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:padding">20dp</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Custom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Custom.Button">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="Custom.Title">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="Custom.Subtitle">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

    <style name="Custom.Subtitle2">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="Custom.Text">
        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="Custom.Text.Profile">
        <item name="android:layout_marginStart">140dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="Custom.TableLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:id">@id/table</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Custom.TableLayout.Horizontal">
        <item name="android:layout_width">500dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_round</item>
    </style>

    <style name="Custom.TableRow">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/border_bottom_black</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="Custom.TableRow.Profile">
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="Custom.ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Custom.ImageView.Profile">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
    </style>

    <style name="Custom.Layout">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/border_round</item>
    </style>

    <style name="SocialMediaButtons">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">?actionBarSize</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Custom.Numberpicker">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:id">@id/numberpicker</item>
        <item name="android:layout_toRightOf">@id/numberpicker</item>
    </style>

    <style name="Custom.HomeMenu" parent="Custom.TableLayout.Horizontal">
        <item name="android:layout_margin">20dp</item>
        <item name="tint">@color/colorPrimaryDark</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_width">140dp</item>
    </style>
</resources>